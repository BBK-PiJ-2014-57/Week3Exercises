println("Please enter some text for the Palindrome checker!");
String totest = readLine();
int totestlen = totest.length();
boolean isPalin = true;
for(int i = 0; i<totestlen; i++)
{
	if(totest.charAt(i) != totest.charAt(totestlen - 1- i))
	{
		isPalin = false;
	}
}
if(isPalin)
{
	println("It is a Palindrome");
}
else
{
	println("Hard luck. Is isn't a Palindrome");
}
	